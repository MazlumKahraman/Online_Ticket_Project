@using E_vent.WebUI.ViewModels
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<EventViewModel>

<div id="datatables-reponsive_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th style="width:20%;">Event Name</th>
                        <th style="width:15%">Start Date</th>
                        <th style="width:15%">Last Attendance</th>
                        <th style="width:15%">Status</th>
                        <th>Organizator</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@Model[i].Name</td>
                            <td>@Model[i].BegginigTime</td>
                            <td>@Model[i].LastAttendance</td>
                            @if (Model[i].StatusId == 1)
                            {
                                <td><span class="badge bg-warning">Waiting</span></td>
                            }
                            else if (Model[i].StatusId == 2)
                            {
                                <td><span class="badge bg-success">Approved</span></td>
                            }
                            else if (Model[i].StatusId == 3)
                            {
                                <td><span class="badge bg-danger">Declined</span></td>
                            }
                            <td>@($"{Model[i].User.Detail.FirstName} {Model[i].User.Detail.MiddleName} {Model[i].User.Detail.LastName}")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>