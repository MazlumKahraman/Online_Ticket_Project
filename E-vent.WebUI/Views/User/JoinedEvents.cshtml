@using E_vent.WebUI.ViewModels
@{
    Layout="_UserLayout";
}
@model List<EventUserViewModel>
<h3>Joined Events</h3>
<div id="datatables-reponsive_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th style="width:20%;">Event Name</th>
                        <th style="width:15%">Start Date</th>
                        <th style="width:15%">Last Attendance</th>
                        <th style="width:15%">Category</th>
                        <th style="width:15%">City</th>
                        <th>Organizator</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {

                        <tr onclick="eventDetail(@Model[i].Event.Id)">
                            <td>@Model[i].Event.Name</td>
                            <td>@Model[i].Event.BegginigTime.ToShortDateString()</td>
                            <td>@Model[i].Event.LastAttendance.ToShortDateString()</td>
                            <td>@Model[i].Event.Category.Name</td>
                            <td>@Model[i].Event.City.Name</td>
                            @if (Model[i].Event.User is not null)
                            {
                                <td>@($"{Model[i].Event.User.Detail.FirstName} {Model[i].Event.User.Detail.MiddleName} {Model[i].Event.User.Detail.LastName}")</td>

                            }
                            else
                            {
                                <td></td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>