@using E_vent.WebUI.ViewModels
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@model EventViewModel
<div class="card">
    <div class="card-header">
        <h5 class="card-title">Add Event</h5>
    </div>
    <form method="post" action="@Url.Action("AddEvent","User")">
        <div class="card-body">
            <div class="mb-3 row">
                <label class="col-form-label col-sm-2 text-sm-end">Event Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Name" placeholder="Name">
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-form-label col-sm-2 text-sm-end">Category Name</label>
                <div class="col-sm-10">
                    <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories,"Id","Name"))"></select>
                </div>
            </div>
            
            <div class="mb-3 row">
                <label class="col-form-label col-sm-2 text-sm-end">City Name</label>
                <div class="col-sm-10">
                    <select asp-for="CityId" class="form-control" asp-items="@(new SelectList(ViewBag.Cities,"Id","Name"))"></select>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-form-label col-sm-2 text-sm-end">Starting Time</label>
                <div class="col-sm-10">
                    <input type="datetime" class="form-control" name="BegginigTime" placeholder="Starting Time (mm/dd/yyyy)">
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-form-label col-sm-2 text-sm-end">Last Attendance</label>
                <div class="col-sm-10">
                    <input type="datetime" class="form-control" name="LastAttendance" placeholder="Last Attendance Time (mm/dd/yyyy)">
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-form-label col-sm-2 text-sm-end">Description</label>
                <div class="col-sm-10">
                    <textarea type="text" class="form-control" name="Description" placeholder="Description"></textarea>
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-form-label col-sm-2 text-sm-end">Quato</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="Quato" placeholder="Quato">
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-form-label col-sm-2 text-sm-end">Price</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" name="Price" placeholder="Ticket Price">
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-form-label col-sm-2 text-sm-end">Adress</label>
                <div class="col-sm-10">
                    <textarea type="text" class="form-control" name="Adress" placeholder="adress"></textarea>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-form-label col-sm-2 text-sm-end"></label>
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>            
            </div>
        </div>
    </form>
</div>