@using E_vent.WebUI.ViewModels
@{
	Layout = null;
}
@model EntegratorViewModel

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">


	<link rel="preconnect" href="https://fonts.gstatic.com">
	<link rel="shortcut icon" href="~/img/icons/icon-48x48.png" />

	<link rel="canonical" href="https://demo-basic.adminkit.io/pages-sign-up.html" />

	<title>Sign Up</title>

	<link href="~/css/app.css" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
</head>

<body>
	<main class="d-flex w-100">
		<div class="container d-flex flex-column">
			<div class="row vh-100">
				<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
					<div class="d-table-cell align-middle">

						<div class="text-center mt-4">
							<h1 class="h2">Get started</h1>
							<p class="lead">
								Start journey to the best possible user experience for you customers.
							</p>
						</div>

						<div class="card">
							<div class="card-body">
								<div class="m-sm-4">
										<div class="mb-3">
											<label class="form-label">Entegrator Name</label>
											<input class="form-control form-control-lg" type="text" readonly value="@Model.Name">
										</div>
										<div class="mb-3">
											<label class="form-label">Domain Name</label>
											<input class="form-control form-control-lg" type="text" readonly value="@Model.DomainName">
										</div>
										<div class="mb-3">
											<label class="form-label">Mail Address</label>
											<input class="form-control form-control-lg" type="text" readonly value="@Model.MailAdress">
										</div>
										<div class="mb-3">
											<label class="form-label">Secret Api Key</label>
											<input class="form-control form-control-lg" type="text" readonly value="@Model.SecretKey">
										</div>
								</div>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</main>

	<script src="~/js/app.js"></script>

</body>

</html>